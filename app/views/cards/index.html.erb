<h1>Все карточки</h1>

<table class="table table-striped">
  <tr>
    <th>Original text</th>
    <th>Translated text</th>
    <th>Review date</th>
  </tr>

  <% @cards.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
      </tr>
  <% end %>
</table>
