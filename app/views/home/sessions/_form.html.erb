<%= simple_form_for @user, url: { controller:'sessions', action:'create' } do |f| %>
    <% if flash[:notice] %>
        <div class='alert alert-info alert-danger'>
          <% flash.each do |name, msg| -%>
              <%= content_tag :div, msg, class: name %>
          <% end -%>
        </div>
    <% end %>

      <%= f.input :email%>
      <%= f.input :password %>
      <%= f.check_box :remember_me! %>
      <%= f.label :remember_me %>
      <%= f.button :submit, t('helpers.submit.user.log_in'), class:"btn btn-lg btn-success btn-block"%>
<% end %>
