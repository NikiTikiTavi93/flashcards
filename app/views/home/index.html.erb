
<% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
<% end -%>
<% unless @card.nil?%>
    <tr>
      <%= semantic_form_for @card, url:{controller: 'home', action: 'check'} do |f| %>
          <%= f.input :original_text, :input_html => { :value => nil}, style: "width: 50%"%>
          <%= f.input :id, as: :hidden, value: @card.id %>
          <%= @card.translated_text%>
          <%= image_tag @card.image.url(:medium) %>
          <%= f.action :submit %>
      <% end %>
    </tr>
<% end %>
