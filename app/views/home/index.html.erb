
<% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
<% end -%>
<% unless @card.nil?%>
    <tr>
      <%= form_tag(controller: "home", action: "check", method: "put") do |f| %>
          <%= label :original_text, "Original text" %>
          <%= text_field_tag :original_text  %>
          <%= hidden_field_tag(:card_id, @card.id) %>
          <%= @card.translated_text%>
          <%= image_tag @card.image.url(:medium) %>
          <%= submit_tag "Проверить"%>
      <% end %>
    </tr>
<% end %>
