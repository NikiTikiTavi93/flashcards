<%= simple_form_for @user, url:{controller:'sessions' ,action:'create'} do |f| %>

    <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: name %>
    <% end -%>
  <div class="field">

    <%= f.input :email%>
  </div>
  <div class="field">

    <%= f.password_field  :password %>
  </div>
  <div class="field">
    <%= f.check_box :remember_me! %>
    <%= f.label :remember_me %>
  </div>
  <div class="actions"><%= f.button :submit, t('helpers.submit.user.log_in') %></div>
<% end %>
