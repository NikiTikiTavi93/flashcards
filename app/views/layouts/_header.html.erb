<header class="clearfix">
  <h1><%= link_to t('app.flashcards'), root_path %></h1>

  <ul class="nav nav-tabs">
    <li role="presentation"><%= link_to t('app.all_cards'), dashboard_cards_path %></li>
    <% if current_user %>
    <li role="presentation"><%= link_to t('app.new_card'), new_dashboard_card_path %></li>
    <li role="presentation"><%= link_to t('app.new_deck'), new_dashboard_deck_path %></li>
    <li role="presentation"><%= link_to t('app.all_decks'), dashboard_decks_path %></li>
          <li><%= link_to t('app.settings'), edit_home_user_path(current_user) %></li>
          <li>
            <%= link_to t('app.log_out'), logout_path %>
          </li>
    <% else %>
        <li role="presentation"><%= link_to t('app.sign_in'), signup_path %></li>
        <li role="presentation"><%= link_to t('app.log_in'), login_path %></li>
        <li role="presentation"><%= link_to t('app.oauth_login'), auth_at_provider_path(:provider => :twitter) %></li>
        <li role="presentation">
          <% if I18n.locale == I18n.default_locale %>
              <%= link_to t('app.switch'), locale: 'en' %>
          <% else %>
              <%= link_to t('app.switch'), locale: 'ru' %>
          <% end %>
        </li>
    <% end %>

  </ul>
</header>
